{
  "name": "bicep-what-if-web-extension",
  "version": "1.0.0",
  "description": "Azure DevOps web extension for Bicep What-If Reports",
  "main": "bicep-report-extension.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts",
    "test": "mocha tests/**/*.test.ts --require ts-node/register/transpile-only --project tsconfig.test.json --timeout 10000 --reporter json > tests/report.json"
  },
  "keywords": [
    "azure-devops",
    "bicep",
    "what-if"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "chai": "^5.2.1",
    "eslint": "^9.31.0",
    "globals": "^15.12.0",
    "jsdom": "^26.1.0",
    "mocha": "^11.7.1",
    "sanitize-html": "^2.17.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "azure-devops-extension-sdk": "^4.0.2",
    "prettier": "^3.6.2"
  }
}
