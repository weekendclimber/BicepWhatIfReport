{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./contents",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["../task/node_modules/@types"],
    "types": ["node", "mocha", "chai"]
  },
  "include": ["tests/*.ts"],
  "exclude": ["node_modules"]
}
